{
  "name": "i18n-chain",
  "displayName": "i18n-chain",
  "description": "输入中文自动查找多语言key的i18n插件",
  "version": "0.1.3",
  "publisher": "frankkai",
  "icon": "image/logo.png",
  "engines": {
    "vscode": "^1.59.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:i18n-ts",
    "onCommand:i18n-json",
    "onStartupFinished"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FrankKai/i18n-chain.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/FrankKai/i18n-chain/issues"
  },
  "homepage": "https://github.com/FrankKai/i18n-chain#readme",
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "i18n-ts",
        "title": "生成多语言代码片段(Typescript文件)"
      },
      {
        "command": "i18n-json",
        "title": "生成多语言代码片段(JSON文件)"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "i18n-chain",
      "properties": {
        "i18n-chain.autoCompile": {
          "type": "boolean",
          "default": false,
          "description": "启动时自动编译"
        },
        "i18n-chain.defaultCmd": {
          "type": "string",
          "default": "i18n-json",
          "description": "二选一 i18n-ts i18n-json"
        },
        "i18n-chain.localePath": {
          "type": "string",
          "default": "/src/locales/zh",
          "description": "你的中文多语言路径目录"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "yarn esbuild-base -- --sourcemap",
    "esbuild-watch": "yarn esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./",
    "pretest": "yarn test-compile",
    "build": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.59.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "esbuild": "^0.14.36",
    "eslint": "^7.27.0",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "dependencies": {
    "glob": "^7.2.0"
  }
}
